
#override OPT_EXMEM_MALLOC=1
#override OPT_CHDK_IN_EXMEM=1

#PLATFORMID=0x3227
PLATFORMID=12839

PLATFORMOS=dryos

# Set up size variables for AgentRAM
override OPT_ARAM_MALLOC=1
override OPT_CHDK_IN_ARAM=1
override OPT_ARAM_TESTING=
ARAM_HEAP_START=0x3ce000
ARAM_HEAP_SIZE=0x32000

ifdef OPT_CHDK_IN_ARAM 
MEMISOSTART=$(ARAM_HEAP_START) 
else 
ifdef OPT_CHDK_IN_EXMEM
MEMISOSTART=0x78E67E0   # MAXRAMADDR+1 - EXMEM_HEAP_SKIP - EXMEM_BUFFER_SIZE - 32(0x20) (exmem allocates 64 bytes extra, 32 before and 32 after block allocated)
else
MEMISOSTART=0x1745bc   # original non-exmem value
endif
endif

ROMBASEADDR=0xFF810000

MAXRAMADDR=0x7FFFFFF
EXMEM_BUFFER_SIZE=0xA0000  # now 256KB, 80000=512KB, C0000=768KB, 100000=1MB
EXMEM_HEAP_SKIP=0x679800

NEED_ENCODED_DISKBOOT=6
KEYSYS=d4c
